{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "declaration": true,
    "declarationDir": "./dist",
    "moduleResolution": "Node",
    "strict": true,
    "outDir": "./dist",
    "jsx": "react",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src/components/**/*", "src/hooks/**/*", "src/index.tsx"],
  "exclude": [
    "node_modules",
    "**/*.test.tsx",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts"
  ]
}